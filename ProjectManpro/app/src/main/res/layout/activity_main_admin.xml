<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".HomeUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="#0000ff"
            android:gravity="center"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ukp"
                android:layout_marginRight="20dp"
                ></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="Papan Pengumuman HimaInfra"
                android:textSize="50px"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"

            android:text="Pengumuman Informatika" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/ic_baseline_admin_panel_settings_24" />

        <TextView
            android:id="@+id/textViewAccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access lists" />

        <Button
            android:id="@+id/buttonAddAnn"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:backgroundTint="#0000ff"
            android:text="+ Add Announcement" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:id="@+id/rvPengumuman"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewMore"
            android:textSize="50px"
            android:textColor="#add8ff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See more>" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="100px"
            android:text="Grup Pengumuman" />

        <Button
            android:id="@+id/buttonAddGroup"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:backgroundTint="#0000ff"
            android:text="+ Add Group" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:id="@+id/rvGrup"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewMore2"
            android:textSize="50px"
            android:textColor="#add8ff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See more>" />
    </LinearLayout>
</ScrollView>