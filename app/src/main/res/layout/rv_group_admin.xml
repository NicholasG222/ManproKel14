<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="101dp"
            android:layout_height="166dp"
            android:layout_gravity="left"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ukp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Nama grup"
            android:textAllCaps="true"

            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageViewLogo"
            app:layout_constraintTop_toTopOf="@+id/imageViewLogo" />

        <TextView
            android:id="@+id/textViewKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="4dp"
            android:text="Kategori grup"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/textViewNama"
            app:layout_constraintTop_toBottomOf="@+id/textViewNama" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FF0000"
            android:text="Delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewKategori"
            app:layout_constraintTop_toBottomOf="@+id/textViewKategori"
            app:layout_constraintVertical_bias="0.116" />

        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="137dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"

            android:backgroundTint="@color/purple_500"
            android:text="Edit"
            app:layout_constraintEnd_toEndOf="@+id/buttonDelete"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/buttonDelete"
            app:layout_constraintTop_toBottomOf="@+id/buttonDelete" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>