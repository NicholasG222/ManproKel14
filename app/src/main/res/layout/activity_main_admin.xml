<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollIndicators="none"
    tools:context=".HomeUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp"
            android:text="Log in sebagai: " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingBottom="10dp"
            >

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@drawable/ic_baseline_admin_panel_settings_24" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Access Center"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/underline"/>

        <SearchView
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search here"
            android:iconifiedByDefault="false"
            android:background="@drawable/email_et"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp">

        </SearchView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Pengumuman Informatika" />
        <TextView
            android:id="@+id/textViewKosongAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="Data tidak ditemukan" />

        <Button
            android:id="@+id/buttonAddAnn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:backgroundTint="#0000ff"
            android:text="+ Add Announcement" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvPengumuman"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            />

        <TextView
            android:id="@+id/textViewMore"
            android:textSize="50px"
            android:textColor="#3a3afc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See more >>"
            android:paddingHorizontal="20dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:gravity="center"
            android:text="Grup Pengumuman"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="50px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewKosongGrupAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="Data tidak ditemukan" />

        <Button
            android:id="@+id/buttonAddGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0000ff"
            android:text="+ Add Group"
            android:layout_marginHorizontal="40dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvGrup"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>

        <TextView
            android:id="@+id/textViewMore2"
            android:textSize="50px"
            android:textColor="#3a3afc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See more >>"
            android:paddingHorizontal="20dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>